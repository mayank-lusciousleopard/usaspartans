{% doc %}
  @prompt
    create a section to add image, and adjusting its width, margin from all sides, background color,
    mobile image upload, max-width presets, and height adjustment
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding-top: {{ block.settings.margin_top }}px;
    padding-bottom: {{ block.settings.margin_bottom }}px;
    padding-left: {{ block.settings.margin_left }}px;
    padding-right: {{ block.settings.margin_right }}px;
  }

  .ai-image-block-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-image-block-image-{{ ai_gen_id }} {
    width: 100%;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.image_height == 'auto' %}
      height: auto;
      object-fit: unset;
    {% elsif block.settings.image_height == 'custom' %}
      height: {{ block.settings.custom_height }}px;
      object-fit: {{ block.settings.object_fit }};
    {% else %}
      height: {{ block.settings.image_height }};
      object-fit: {{ block.settings.object_fit }};
    {% endif %}
  }

  .ai-image-block-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-block-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-block-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-block-wrapper-{{ ai_gen_id }} {
      width: 100%;
      max-width: 100%;
    }

    .ai-image-block-image-{{ ai_gen_id }} {
      {% if block.settings.mobile_image_height == 'auto' %}
        height: auto;
        object-fit: unset;
      {% elsif block.settings.mobile_image_height == 'custom' %}
        height: {{ block.settings.mobile_custom_height }}px;
        object-fit: {{ block.settings.object_fit }};
      {% else %}
        height: {{ block.settings.mobile_image_height }};
        object-fit: {{ block.settings.object_fit }};
      {% endif %}
    }
  }
{% endstyle %}

<ai-image-block-{{ ai_gen_id }}
  class="ai-image-block-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-block-wrapper-{{ ai_gen_id }}">
    {%- liquid
      assign show_mobile_image = false
      if block.settings.mobile_image != blank
        assign show_mobile_image = true
      endif
    -%}

    {% if show_mobile_image %}
      {%- comment -%} Desktop image {%- endcomment -%}
      <div class="ai-image-block-desktop-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 2000 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-image-block-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-image-block-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-image-block-empty-state-{{ ai_gen_id }}">
              Next, add an image
            </div>
          </div>
        {% endif %}
      </div>

      {%- comment -%} Mobile image {%- endcomment -%}
      <div class="ai-image-block-mobile-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
          alt="{{ block.settings.mobile_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.mobile_image.width }}"
          height="{{ block.settings.mobile_image.height }}"
          class="ai-image-block-image-{{ ai_gen_id }}"
        >
      </div>

      <style>
        @media screen and (min-width: 750px) {
          .ai-image-block-mobile-{{ ai_gen_id }} { display: none; }
        }
        @media screen and (max-width: 749px) {
          .ai-image-block-desktop-{{ ai_gen_id }} { display: none; }
        }
      </style>

    {% else %}
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-image-block-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-image-block-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-image-block-empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
    {% endif %}
  </div>
</ai-image-block-{{ ai_gen_id }}>

<script>
  (function() {
    class AiImageBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('ai-image-block-{{ ai_gen_id }}', AiImageBlock{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Image block",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "header",
      "content": "Mobile Image"
    },
    {
      "type": "paragraph",
      "content": "Optional: upload a separate image for mobile. If left blank, the desktop image is used on all devices."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Sizing"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Container max width",
      "min": 100,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "default": 1600
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Desktop image height",
      "options": [
        { "value": "auto",   "label": "Auto (natural)" },
        { "value": "200px",  "label": "Small — 200px" },
        { "value": "300px",  "label": "Medium — 300px" },
        { "value": "450px",  "label": "Large — 450px" },
        { "value": "600px",  "label": "Extra large — 600px" },
        { "value": "100vh",  "label": "Full screen height" },
        { "value": "custom", "label": "Custom" }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "custom_height",
      "label": "Desktop custom height",
      "info": "Only used when 'Custom' is selected above",
      "min": 50,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "default": 400
    },
    {
      "type": "select",
      "id": "mobile_image_height",
      "label": "Mobile image height",
      "options": [
        { "value": "auto",   "label": "Auto (natural)" },
        { "value": "150px",  "label": "Small — 150px" },
        { "value": "250px",  "label": "Medium — 250px" },
        { "value": "350px",  "label": "Large — 350px" },
        { "value": "500px",  "label": "Extra large — 500px" },
        { "value": "100vh",  "label": "Full screen height" },
        { "value": "custom", "label": "Custom" }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "mobile_custom_height",
      "label": "Mobile custom height",
      "info": "Only used when mobile 'Custom' is selected above",
      "min": 50,
      "max": 800,
      "step": 10,
      "unit": "px",
      "default": 300
    },
    {
      "type": "select",
      "id": "object_fit",
      "label": "Image crop (when height is fixed)",
      "options": [
        { "value": "cover",      "label": "Cover — fill & crop" },
        { "value": "contain",    "label": "Contain — fit inside" },
        { "value": "fill",       "label": "Fill — stretch" },
        { "value": "none",       "label": "None — original size" }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_left",
      "label": "Left margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
