{% comment %}
  Customizable Image + Text Split Section for Shopify
  - Adjustable left/right image position
  - Subheading, heading, description
  - Icon-style bullet points
  - Custom class support
{% endcomment %}

<section class="custom-split-section {{ section.settings.custom_class }}">
  <div class="split-wrapper {{ section.settings.image_position }}">

    <div class="split-image">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="" height="" width="">
    </div>

    <div class="split-content">
      {% if section.settings.subheading != blank %}
        <p class="subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="description">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <ul class="bullet-points">
          {% for block in section.blocks %}
            <li class="bullet-item">
              {% if block.settings.icon != blank %}
                <img class="bullet-icon" src="{{ block.settings.icon | img_url: '32x32' }}" alt="icon" height="" width="">
              {% endif %}
              <span>{{ block.settings.text }}</span>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

  </div>
</section>

<style>
  .custom-split-section {
    padding: 60px 0;
  }
  .split-wrapper {
    display: flex;
    align-items: center;
    gap: 40px;
  }
  .split-wrapper.right {
    flex-direction: row-reverse;
  }
  .split-wrapper.left {
    flex-direction: row;
  }
  .split-image img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }
  .subheading {
    font-size: 14px;
    text-transform: uppercase;
    opacity: 0.7;
    margin-bottom: 5px;
  }
  .heading {
    font-size: 32px;
    margin: 10px 0;
  }
  .description {
    margin-bottom: 20px;
    line-height: 1.6;
  }
  .bullet-points {
    list-style: none;
    padding: 0;
  }
  .bullet-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }
  .bullet-icon {
    width: 24px;
    height: 24px;
  }
</style>

{% schema %}
{
  "name": "Image Text Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Right", "value": "right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS Class"
    }
  ],
  "blocks": [
    {
      "type": "bullet",
      "name": "Bullet Point",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image + Text Split"
    }
  ]
}
{% endschema %}
