{% assign benefit_blocks = section.blocks | where: 'type', 'Item' %}
{% assign button_blocks = section.blocks | where: 'type', 'Button' %}

<section id="{{ section.id }}" class="c-section" style="margin-top: 0 !important;">
  <div class="c-section-header">
    {%- if section.settings.subheading != empty -%}
      <p class="c-section-top-subheading text__lightblue">{{ section.settings.subheading }}</p>
    {%- endif -%}

    {%- if section.settings.main_heading != empty -%}
      <h2 class="new__header">
        {{ section.settings.main_heading }}
        <span style="color: {{ section.settings.heading_highlight_color }}">
          {{- section.settings.heading_highlight -}}
        </span>
      </h2>
    {%- endif -%}

    {%- if section.settings.description != empty -%}
      <p class="c-section-d padding__extreme">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>

  <div class="{% if section.settings.full_width == false %}container{% endif %}">
    <div class="page-width">
      <div class="c-ct-grid">
        <div class="c-ct-grid1">
          {% if section.settings.small_image %}
            {{
              section.settings.small_image
              | image_url: width: 750
              | image_tag: loading: 'lazy', height: 'auto', class: 'c-ct-small-image'
            }}
          {% endif %}

          {% if section.settings.heading != empty %}
            <{{ section.settings.heading_tag }} class="c-ct-heading {% if section.settings.heading_tag == 'h1' %} h1 {% endif %}">
              {{- section.settings.heading -}}
            </{{ section.settings.heading_tag }}>
          {% endif %}
          {% if section.settings.add_promotion_badge %}
            <span class="c-promotion">
              {{- section.settings.promotion_text }}
              <span class="c-promo-badge">{{ section.settings.badge_text }}</span>
            </span>
          {% endif %}
          {% if section.settings.paragraph != empty %}
            <div class="c-ct-para">{{ section.settings.paragraph }}</div>
          {% endif %}
          {% if section.settings.blue_text != empty or section.settings.normal_text != empty %}
            <a href="{{ section.settings.link }}" class="c-ct-para">
              {% if section.settings.blue_text != empty %}
                <span class="c-ct-para-blue">{{ section.settings.blue_text }}</span>
              {% endif %}
              {% if section.settings.normal_text != empty %}
                <span class="c-ct-para-normal">{{ section.settings.normal_text }}</span>
              {% endif %}
              {% if section.settings.use_arrow %}
                <span class="c-ct-para-arrow">â†’</span>
              {% endif %}
            </a>
          {% endif %}
          {% if section.settings.show_dynamic_stats %}
          <div class="c-dynamic-stats">
            <div class="c-dynamic-stat">
              <div class="stat-value">{{ section.settings.stat_percentage | default: '93%' }}</div>
              <div class="stat-text">
                {{
                  section.settings.stat_text_1
                  | default: 'Users reported a boost in recovery speed and enhanced mood benefits.'
                }}
              </div>
            </div>
            <div class="c-dynamic-stat">
              <div class="stat-value">{{ section.settings.stat_fraction | default: '4/5' }}</div>
              <div class="stat-text">
                {{ section.settings.stat_text_2 | default: 'Was rated as top wellness tool' }}
              </div>
            </div>
          </div>
          {% endif %}

          {% if benefit_blocks != blank %}
            <div class="c-ct-benefits">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'Item' %}
                    <div class="c-ct-benefit">
                      {% render 'c-icon-check' %}
                      <div>{{ block.settings.block_heading }}</div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}
          {% if button_blocks != blank %}
            <div class="c-buttons-div">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'Button' %}
                    <a class="c-button {{ block.settings.button_style }}" href="{{ block.settings.button_url }}">
                      {{- block.settings.button_text -}}
                    </a>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}

          {% if section.settings.add_social_proof %}
            <div class="c-ct-social-proof-wrapper">
              <p style="margin-bottom: 0.5em;">As featured in:</p>
              <div
                class="c-social-proof"
                style="display:flex; justify-content: flex-start; align-items: center; gap: 8px; flex-flow: row wrap;"
              >
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'logo' %}
                      {{
                        block.settings.logo
                        | image_url: height: 27
                        | image_tag: class: 'c-social-proof-logo', loading: 'lazy', height: 27
                      }}
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
          {% if section.settings.show_variants_information %}
            <div class="c-ct-variant-information-wrapper">
              <p style="margin-bottom: 0.5em;">Available in four different finishes:</p>
              <div
                class="c-ct-variant-swatches"
                style="display:flex; justify-content: flex-start; align-items: center; gap: 8px; flex-direction: row wrap;"
              >
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'swatch' %}
                      <a
                        href="#product-section"
                        class="c-ct-variant-swatches__swatch"
                        style="{% if block.settings.swatch_color_image != blank%} background: url({{block.settings.swatch_color_image | image_url: width: 64}}) {% else %} background-color: {{ block.settings.swatch_color }}{% endif %}"
                        onclick="document.querySelector('label[data-swatch=\'{{block.settings.swatch_name}}\']').click()"
                      ></a>
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
        <div class="c-ct-grid2">
          {% if section.settings.image %}
            {{
              section.settings.image
              | image_url: width: 1500
              | image_tag: loading: 'lazy', height: 'auto', class: 'c-ct-image'
            }}
          {% endif %}
          {% if section.settings.video %}
            {{
              section.settings.video
              | video_tag:
                autoplay: false,
                loop: true,
                muted: false,
                controls: true,
                class: 'c-ct-image',
                image_size: 'master',
                image_ratio: 'auto',
                image_position: 'middle',
                image_align: 'center'
            }}
          {% endif %}
        </div>
      </div>
      <div class="c-cards-container">
        {% for block in section.blocks %}
          {% if block.type == 'Card' %}
            <div class="c-card">
              {% if block.settings.card_icon %}
                {{ block.settings.card_icon | image_url: width: 750 | image_tag: loading: 'lazy', width: '50' }}
              {% endif %}
              <div class="c-card-title">{{ block.settings.card_title }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

