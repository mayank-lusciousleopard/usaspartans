      {% endif %}
      {% if section.settings.flip == true %}
        order: 1;
      {% endif %}
      {%  if section.settings.center_content == true %}
        justify-content: center;
        gap: 3em;
      {% endif %}
    }

    #{{ section.id }} .c-ct-grid {
      display: grid;
      grid-template-columns: {{ section.settings.grid_proportion }};
      gap: 0em;
      width: 100%;
      overflow: hidden;
      position: relative;
