<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
 
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} h2 {
    color: {{ section.settings.accent_color }};
  }

  #{{ section.id }} .c-section-top {
    {% if section.settings.section_top_alignment == "flex-start" %}width: 100%;{% endif %}
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-b-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    margin-top: 80px;
  }

  #{{ section.id }} .c-b-item {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: linear-gradient(180deg, rgba(14, 131, 249, 0.10) 0%, rgba(14, 131, 249, 0.00) 100%);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Ligera sombra */
  }

  #{{ section.id }} .c-b-item h3 {
    color: #000;
    text-align: center;
    font-size: clamp(24px, 4vw, 36px); /* Tamaño adaptativo: mínimo 24px, preferido 36px, máximo 4vw */
    font-weight: 700;
    line-height: 140%; /* 50.4px */
    text-transform: capitalize;
    margin-top: 1rem;
  }
  
  #{{ section.id }} .c-b-item p {
    color: #000;
    text-align: center;
    font-size: clamp(16px, 2.5vw, 20px); /* Tamaño adaptativo: mínimo 16px, preferido 20px, máximo 2.5vw */
    font-weight: 600;
    line-height: 140%; /* 28px */
    margin-top: 0.5rem;
  }
  
  #{{ section.id }} .c-b-item span {
    color: #0e83f9;
    font-size: clamp(14px, 2vw, 18px); /* Tamaño adaptativo: mínimo 14px, preferido 18px, máximo 2vw */
    font-weight: bold;
    margin-top: 1rem;
  }
  

  /* Responsive design */
  @media (max-width: 768px) {
    #{{ section.id }} .c-b-grid {
      grid-template-columns: 1fr; /* Cambia a una sola columna en móviles */
    }

    #{{ section.id }} .c-b-item {
      padding: 1rem;
    }
  }

  .custom__header {
    text-align: center;
    margin: 1rem 0;
    font-size: clamp(28px, 5vw, 48px) !important;
    font-weight: bold;
    line-height: 120%; /* 57.6px */
    text-transform: capitalize;
  }

  .padding__extreme {
    padding: 0 24rem;
  }

  @media (max-width: 768px) {
    .padding__extreme {
      padding: 0 1rem; /* Ajusta el padding a 1rem en móviles y tablets */
    }
  }
</style>

<section id="{{ section.id }}" class="c-section  tw-bg-gradient-to-b tw-from-[#FFF] tw-to-[#F0F8FF]" style="margin-top: 0 !important; padding: 7rem 0 !important;">
  <div class="{{ section.settings.section_container }}">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2 class="custom__header">{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="padding__extreme">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-b-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'Item' %}
            <div class="c-b-item" {{ block.shopify_attributes }}>
              <div class="c-b-item-image-div">
                {% if block.settings.block_image %}
                  {{ block.settings.block_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto', class: 'c-b-item-image' }}
                {% endif %}
                {% if block.settings.block_icon %}
                  {{ block.settings.block_icon | image_url: width: 65 | image_tag: loading: 'lazy', height: 'auto', class: 'c-b-item-icon' }}
                {% endif %}
              </div>
              <div class="c-b-item-content tw-my-3">
                <h3>{{ block.settings.block_heading }}</h3>
                <div class="tw-my-3">{{ block.settings.block_paragraph }}</div>
                {% if block.settings.block_client != empty %}
                  <span>{{ block.settings.block_client }}</span>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

