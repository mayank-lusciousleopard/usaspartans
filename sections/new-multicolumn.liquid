{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .nm-container {
    max-width: {{ section.settings.page_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .nm-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: 4rem;
  }

  .nm-header h2 {
    margin: 0 0 1rem;
    font-size: {{ section.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
    font-weight: 500;
    font-family: 'TT Hoves Pro Trial Medium';
    letter-spacing: 0;
  }

  .nm-header p {
    margin: 0;
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subtext_color }};
  }

  .nm-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 0;
    list-style: none;
    padding: 0;
  }

  .nm-column {
    flex: 1 1 0;
    padding: 0 2rem;
    position: relative;
    min-width: 250px;
    box-sizing: border-box;
  }

  /* Vertical Divider logic */
  .nm-column:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    height: 80%;
    width: 1px;
    background-color: {{ section.settings.divider_color }};
    display: block;
  }

  .nm-card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .nm-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: {{ section.settings.icon_bg_color }};
    margin-right: 7px;
    flex-shrink: 0;
  }

  .nm-icon-wrapper svg {
    width: 20px;
    height: 20px;
    fill: {{ section.settings.icon_color }};
  }

  .nm-card-title {
    font-size: {{ section.settings.card_heading_size }}px;
    font-weight: 500;
    margin: 0;
    color: {{ section.settings.text_color }};
    line-height: 1;
font-family: 'TT Hoves Pro Trial Medium';
    letter-spacing: 0;
  }

  .nm-card-text {
    font-size: {{ section.settings.card_text_size }}px;
    line-height: 1.5;
    color: {{ section.settings.body_text_color }};
    margin: 0;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .nm-grid {
      flex-direction: column;
    }
    
    .nm-column {
      width: 100%;
      border-right: none;
      padding: 0 0 2rem 0;
      margin-bottom: 2rem;
      border-bottom: 1px solid {{ section.settings.divider_color }};
    }

    .nm-column:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .nm-column:not(:last-child)::after {
      display: none;
    }

    .nm-header h2 {
        font-size: {{ section.settings.heading_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="new-multicolumn section-{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }};">
  <div class="nm-container">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="nm-header">
        {%- if section.settings.heading != blank -%}
          <h2>{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p>{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="nm-grid">
      {%- for block in section.blocks -%}
        <div class="nm-column" {{ block.shopify_attributes }}>
          <div class="nm-card-header">
            {%- if block.settings.icon_html != blank -%}
              <div class="nm-icon-wrapper">
                {{ block.settings.icon_html }}
              </div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="nm-card-title">{{ block.settings.title }}</h3>
            {%- endif -%}
          </div>
          {%- if block.settings.text != blank -%}
            <div class="nm-card-text">
              {{ block.settings.text }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

