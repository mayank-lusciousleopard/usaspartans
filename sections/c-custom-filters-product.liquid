<script>
  const buttons = document.querySelectorAll('.c-product-button');

// Función para actualizar el fondo seleccionado
function updateSelected() {
  buttons.forEach((button) => {
    button.classList.remove('selected'); // Remueve la clase seleccionada de todos
  });
  this.classList.add('selected'); // Agrega la clase seleccionada al botón actual
}

{% comment %} // Selecciona el segundo botón al cargar la página
window.addEventListener('DOMContentLoaded', () => {
  if (buttons[1]) {
    buttons[1].classList.add('selected');
  }
}); {% endcomment %}

// Agrega un evento de clic a cada botón
buttons.forEach((button) => {
  button.addEventListener('click', updateSelected);
});
</script>

