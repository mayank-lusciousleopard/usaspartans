                {% endif %}
              </div>
            </div>

          {% when 'block_title' %}
            <div class="block-title" style="text-align: {{ block.settings.alignment }};">
              <h2>{{ block.settings.title }}</h2>
            </div>
          {% endcase %}
        {% endfor %}
    </div>
</div>
</section>

