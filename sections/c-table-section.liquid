{% style %}

#{{ section.id }} {
      font-size: 16px;
      padding-top: {{ section.settings.padding_top }}em;
      padding-bottom: {{ section.settings.padding_bottom }}em;

    }
  
    #{{ section.id }} .c-section-top-subheading,
    #{{ section.id }} div,
    #{{ section.id }} h2,
    #{{ section.id }} h3 {
      color: {{ section.settings.text_color }};
    }

    #{{ section.id }} h2 {
      color: {{ section.settings.accent_color }};
    }

    #{{ section.id }} .c-section-top {
        display: flex;
        flex-direction: column;
        gap:20px;
      {% if section.settings.section_top_alignment == "flex-start" %}width: 100%;{% endif %}
      align-items: {{ section.settings.section_top_alignment }};
      text-align: {{ section.settings.text_alignment }};
    }

    #{{ section.id }} .c-section-top h2 {
        font-size:56px;
        line-height: 60px;
        font-weight: 700;
    }

    #{{ section.id }} .grid-container {
  display: flex;
  flex-direction: column;
  /* gap: 20px; */
  overflow: auto;
}


#{{ section.id }} .grid-item-row {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 10px;
  padding: 24px;
  align-items: center;
  min-width:800px;
  min-height:112px;
  
}

#{{ section.id }} .grid-column {
  text-align: center;
  /* display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center; */
}

#{{ section.id }} .grid-column.has-icon {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

#{{ section.id }} .product-image {
  max-width: 100%;
  height: auto;
}

#{{ section.id }} .product-image-first {
  max-width: 100%;
  height: auto;
}

#{{ section.id }} .product-title {
  font-size: 1em;
  color: #000000;
  font-weight: 700;
}

#{{ section.id }} .product-title_1 {
  font-size: 1em;
  color: #000000;
  font-size:20px;
  font-weight:700;
}

#{{ section.id }} .product-paragraph {
  margin: 5px 0;
  font-size: 18px;
  color: #000000;
}

#{{ section.id }} .product-icon {
  max-width: 30px;
  height: auto;
  display:flex;
  justify-content:center;
  align-items:center;
}

#{{ section.id }} .block-title h2 {
    font-weight:700;
    font-size:24px;
    margin-top:50px;
    margin-bottom:30px;
    position:relative;
    display:inline-block;
}

#{{ section.id }} .block-title h2::after {
    content: ''; 
    position: absolute;
    left: 0;
    bottom: -5px; 
    width: 100%; 
    height: 1px; 
    background-color: #000; 
}

#{{ section.id }} .image-container {
  position: relative;
  display: inline-block;
}

#{{ section.id }} .product-image-first {
  display: block;
  width: 100%;
  height: auto;
}

#{{ section.id }} .hover-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
  background: linear-gradient(90deg, #0E83F9 0%, #084D93 100%);
  padding: 10px 10px;
  border-radius: 5px;
  text-align: center;
  color:white;
}

#{{ section.id }} .hover-button-link {
  color: white;
  font-size: 12px;
  z-index: 10;
}

#{{ section.id }} .image-container:hover .hover-button {
  display: block;
  cursor:pointer;

}

#{{ section.id }} .highlight {
    color: #0E83F9;
}

#{{ section.id }} .image-container:hover img {
    filter: blur(2px);
}

@media (max-width: 768px) {

  #{{ section.id }} .c-section-top h2 {
    font-size:36px;
    line-height: 40px;
  }

}



{% endstyle %}

<section id="{{ section.id }}" class="c-section">
    <div class="{{ section.settings.section_container }}">
      <div class="c-section-top">
        {%- if section.settings.section_top_subheading != empty -%}
          <p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>
        {%- endif -%}
        {%- if section.settings.section_top_heading != empty -%}
          <h2>{{ section.settings.section_top_heading }}</h2>
        {%- endif -%}
        {%- if section.settings.section_top_heading == empty -%}
            <h2>
                Find The <span class="highlight">Perfect Water Chiller</span> For Your Needs
            </h2>
          {%- endif -%}
        {%- if section.settings.section_top_paragraph != empty -%}
          <div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>
        {%- endif -%}
      </div>

      <div class="grid-container">
        {% for block in section.blocks %}
          {% case block.type %}
        {% when 'image_products' %}
            <div class="grid-item-row" style="{% if block.settings.background_active %}background-color: {{ block.settings.background_color }};{% endif %}">
              <div class="grid-column{% if block.settings.icon_1 %} has-icon{% endif %}" style="text-align: {{ block.settings.alignment_1 }};">
