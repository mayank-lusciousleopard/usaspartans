                  <img src="{{ block.settings.image_1 | image_url }}" alt="{{ block.settings.title_1 }}" class="product-image">
                {% endif %}
                {% if block.settings.title_1 %}
                  <h3 class="product-title_1">{{ block.settings.title_1 }}</h3>
                {% endif %}
                {% if block.settings.paragraph_1 %}
                  <p class="product-paragraph">{{ block.settings.paragraph_1 }}</p>
                {% endif %}
                {% if block.settings.icon_1 %}
                  <img src="{{ block.settings.icon_1 | image_url }}" alt="Icon 1" class="product-icon">
                {% endif %}
              </div>
              <div class="grid-column{% if block.settings.icon_2 %} has-icon{% endif %}">
                <div class="image-container">
                {% if block.settings.image_2 %}
                  <img src="{{ block.settings.image_2 | image_url }}" alt="{{ block.settings.title_2 }}" class="product-image-first">
                  <div class="hover-button">
                    {% if block.settings.button_text_2 %}
                      <a href="{{ block.settings.button_url_2 }}" class="hover-button-link">{{ block.settings.button_text_2 }}</a>
                    {% endif %}
                  </div>
                {% endif %}
