{% schema %}
{
  "name": "New USP",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout & Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background",
      "default": "#F9FAFB"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon Circle Background",
      "default": "#EBF5FF"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#2563EB"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#111827"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Description Color",
      "default": "#4B5563"
    }
  ],
  "blocks": [
    {
      "type": "usp_item",
      "name": "USP Item",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG HTML",
          "info": "Paste your SVG code here. It will be automatically sized and colored."
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Reliable, Consistent Sessions"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Delivers mild hyperbaric therapy at up to 1.5 ATA for reliable, repeatable sessions."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New USP",
      "blocks": [
        { "type": "usp_item" },
        { "type": "usp_item" },
        { "type": "usp_item" },
        { "type": "usp_item" }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .new-usp-section-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
  }

  .new-usp-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
      .new-usp-grid {
          grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
          gap: 30px;
      }
  }

  .new-usp-item {
      display: flex;
      align-items: center;
      gap: 20px;
  }

  .new-usp-icon-wrapper {
      flex-shrink: 0;
      width: 50px;
      height: 50px;
      background-color: {{ section.settings.icon_bg_color }};
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: {{ section.settings.icon_color }};
  }

  .new-usp-icon-wrapper svg {
      width: 20px;
      height: 20px;
      display: block;
  }

  /* Ensure paths in user-provided SVGs inherit color if not hardcoded */
  .new-usp-icon-wrapper svg path {
      fill: currentColor;
  }

  .new-usp-content {
      background-color: {{ section.settings.card_bg_color }};
      border-radius: 12px;
      padding: 24px;
      flex-grow: 1;
      min-height: 100px;
      display: flex;
      flex-direction: column;
      justify-content: center;
  }
  .new-usp-heading {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 4px 0;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    letter-spacing: 0;
    font-family: 'TT Hoves Pro Trial Medium';
}
  
  @media screen and (max-width: 749px) {
      .new-usp-heading {
          font-size: 1.4rem;
      }
  }

  .new-usp-text {
      font-size: 14px;
    letter-spacing: 0;
      margin: 0;
      line-height: 1.5;
      color: {{ section.settings.text_color }};
  }
{% endstyle %}

<div class="new-usp-section-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="new-usp-grid">
      {% for block in section.blocks %}
        <div class="new-usp-item" {{ block.shopify_attributes }}>
          <div class="new-usp-icon-wrapper">
            {% if block.settings.icon_svg != blank %}
              {{ block.settings.icon_svg }}
            {% else %}
              <!-- Fallback Icon if blank -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/></svg>
            {% endif %}
          </div>
          <div class="new-usp-content">
            <h3 class="new-usp-heading">{{ block.settings.heading }}</h3>
            <div class="new-usp-text">{{ block.settings.text | newline_to_br }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>