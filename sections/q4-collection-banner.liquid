{{ 'section-q4-collection-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} .q4-collection-banner {
    --q4-gradient-start: {{ section.settings.gradient_start | default: '#143549' }};
    --q4-gradient-end: {{ section.settings.gradient_end | default: '#065367' }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="q4-collection-banner section-{{ section.id }}-padding" role="region" aria-label="Collection banner">
  <div class="q4-collection-banner__inner">
    <div class="q4-collection-banner__header">
      <div class="q4-collection-banner__titles">
        {%- if section.settings.eyebrow != blank -%}
          <p class="q4-collection-banner__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="q4-collection-banner__title">{{ section.settings.title }}</h2>
        {%- endif -%}
      </div>
      {%- if section.settings.subtitle != blank -%}
        <p class="q4-collection-banner__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="q4-collection-banner__images">
      <picture>
        {% if section.settings.image_bg_desktop != blank %}
          <source media="(min-width: 990px)" srcset="{{ section.settings.image_bg_desktop | image_url: width: 1688 }} 2x, {{ section.settings.image_bg_desktop | image_url: width: 844 }} 1x">
        {% endif %}
        {% if section.settings.image_bg_mobile != blank %}
          <img src="{{ section.settings.image_bg_mobile | image_url: width: 780 }}" alt="{{ section.settings.image_bg_mobile.alt | escape }}" loading="lazy" width="{{ section.settings.image_bg_mobile.width }}" height="{{ section.settings.image_bg_mobile.height }}">
        {% endif %}
      </picture>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Q4 Collection Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {"type": "text", "id": "eyebrow", "label": "Top line", "default": "Spend More"},
    {"type": "text", "id": "title", "label": "Main headline", "default": "Save More"},
    {"type": "text", "id": "subtitle", "label": "Subtext", "default": "Tiered savings up to $300 â€” Ends Nov 10"},

    {"type": "color", "id": "gradient_start", "label": "Gradient start", "default": "#143549"},
    {"type": "color", "id": "gradient_end", "label": "Gradient end", "default": "#065367"},

    {"type": "image_picker", "id": "image_bg_mobile", "label": "Background image (mobile)"},
    {"type": "image_picker", "id": "image_bg_desktop", "label": "Background image (desktop)"},

  ],
  "presets": [
    {"name": "Q4 Collection Banner"}
  ]
}
{% endschema %}


