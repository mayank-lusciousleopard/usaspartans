{%- assign buttonBlocks = section.blocks | where: 'type', 'Button' -%}

<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
    {% if section.settings.image %}
      background:{% if section.settings.use_new_style == false %} linear-gradient(0deg, rgba(14, 131, 249, 0.50) 0%, rgba(14, 131, 249, 0.50) 100%), {% endif %} url("{{ section.settings.image | image_url: width: 1500 }}") lightgray 50% / cover no-repeat;
      background-size: cover;
      box-shadow: inset 0 0 0 2000px rgba(0, 0, 0, {{ section.settings.overlay }});
    {% endif %}
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
    {% if section.settings.use_new_style == false %}
      padding: 2rem;
      backdrop-filter: blur(30px);
      background-color: rgba(255, 255, 255, 0.55);
      margin: 0 auto;
      max-width: 800px;
    {% else %}
      background-color: white;
      backdrop-filter: blur(10px);
      margin: 0;
      max-width: 750px;
      padding: 40px;
    {% endif %}
    border-radius: 12px;
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
  }


  #{{ section.id }} .c-section-top h2 {
    text-align: center;
    font-size: clamp(28px, 4vw, 38px) !important;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 57.6px */
    text-transform: capitalize;
    text-align: {{ section.settings.text_alignment }};
    {% if section.settings.use_new_style == true %}
      background: linear-gradient(90deg, #0E83F9 0%, #084D93 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 40px !important;
    {% endif %}
  }

  #{{ section.id }} .c-section-top .c-t-80 {
    text-align: {{ section.settings.text_alignment }};
    font-size: clamp(16px, 1.8vw, 18px);
    font-style: normal;
    font-weight: 600;
    line-height: 120%; /* 24px */
    text-transform: capitalize;
    margin-bottom: 1.5em;
    {% if section.settings.use_new_style == true %}
      font-weight: 400;
      font-size: 18px !important;
    {% endif %}
  }


  #{{ section.id }} .c-rt-wrapper {
    display: flex;
    flex-direction: column;
    align-items:
    {% case section.settings.blocks_alignment %}
      {% when 'Left' %}
        flex-start; text-align: left
      {% when 'Center' %}
        center; text-align: center
      {% when 'Right' %}
        flex-end; text-align: right
    {% endcase %};
    margin-right: auto;
    margin-left: auto;
    gap: 1em;
    width: {{ section.settings.section_width }}%;
  }

  #{{ section.id }} .c-rt-paragraph {
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 1.125em;
  }

  #{{ section.id }} .c-rt-timer {
    margin: 0 auto;
  }

  #{{ section.id }} .c-rt-timer {
    font-size: 3em;
    font-weight: 700;
    color: #C32127;
    text-align: center;
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
  }

  #{{ section.id }} .c-rt-timer #timer-count {
    display: flex;
    gap: 1.5em;
    {%- if buttonBlocks != empty -%}margin-top: 20px;{%- endif -%}
  }

  #{{ section.id }} .c-button-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 1em;
    gap: 40px;
  }

  #{{ section.id }} .c-cta-button {
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 700;
    color: white;
    border-radius: 10px;
    background: linear-gradient(90deg, #0E83F9 0%, #084D93 100%);
    text-transform: uppercase;
    text-decoration: none;
  }

  #{{ section.id }} .c-cta-button_2 {
    padding: 10px 22px;
    font-size: 16px;
    font-weight: 700;
    color: #0E83F9;
    border-radius: 10px;
    background: white;
    text-transform: uppercase;
    text-decoration: none;
    border: 2px solid #0E83F9;
  }

  #{{ section.id }} .c-cta-button:hover {
      background-color: #0E83F9; 
      background-image: none;
      color: white;
  }

  #{{ section.id }} .c-cta-button_2:hover {
    background-color: #0E83F9;
    color: white;
  }


  @media (max-width: 768px) {
    #{{ section.id }} {
      {% if section.settings.image_mobile %}
        background: url("{{ section.settings.image_mobile | image_url }}") no-repeat center;
      {% endif %}
    }

    #{{ section.id }} .c-rt-wrapper {
      width: 100%;
    }

    #{{ section.id }} .c-rt-button-div {
      flex-direction: column;
    }
    #{{ section.id }} .c-section-top {
      padding: 1em;
      text-align: center !important;
      align-items: center !important;
    }

    #{{ section.id }} .c-section-top h2 {
      {% if section.settings.use_new_style == false %}
        font-size: 24px;
      {% else %}
        font-size: 32px !important;
      {% endif %}
      text-align: center !important;
    }

    #{{ section.id }} .c-section-top .c-t-80 {
      font-size: 16px !important;
      text-align: center !important;
    }

    #{{ section.id }} .c-button-wrapper {
      flex-direction: column;
      gap: 16px;
      width: 100%;
    }

    #{{ section.id }} .c-cta-button {
      font-size: 16px;
      padding: 10px 20px;
    }

  }
</style>

<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-section-top tw-flex tw-flex-wrap tw-justify-center tw-flex-col tw--mx-2">
      <div class="{% if section.settings.use_new_style == false %}md:tw-w-8/12{% else %}tw-w-full{% endif %}">
        {%- if section.settings.section_top_heading != empty -%}
          <h2 class="tw-mb-5 tw-text-center">{{ section.settings.section_top_heading }}</h2>
        {%- endif -%}
      </div>
      <div class=" md:tw-w-full">
        {%- if section.settings.section_top_paragraph != empty -%}
          <div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>
        {%- endif -%}
      </div>

      <div class="c-button-wrapper">
        {% if section.settings.button_text != blank %}
          <a
            class="c-cta-button {{ section.settings.button_style }}"
            href="{{ section.settings.button_url | default: '#' }}"
          >
            {{ section.settings.button_text | default: 'Get My Water Chiller' }}
          </a>
        {% endif %}
        {% if section.settings.button_text_2 != blank %}
          <a
            class="c-cta-button_2 {{ section.settings.button_style }}"
            href="{{ section.settings.button_url_2  }}"
          >
            {{ section.settings.button_text_2 }}

          </a>
        {% endif %}
      </div>
    </div>
    <div class="c-rt-wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {% when 'PageHeading' %}
            <h1>
              {% if block.settings.show_page_title == true %}
                {{ page.title }}
              {% else %}
                {{ block.settings.page_heading }}
              {% endif %}
            </h1>
          {% when 'Heading' %}
            <h2>{{ block.settings.heading }}</h2>
          {% when 'Paragraph' %}
            <div
              style="margin: {{ block.settings.paragraph_margin }}; font-weight: {{ block.settings.paragraph_font_weight }};"
              class="c-rt-paragraph"
            >
              {{ block.settings.paragraph }}
            </div>
          {% when 'Timer' %}
            <div class="c-rt-timer">
              <p id="timer-counter"></p>
            </div>

            <script>
              var countDownDate = new Date('{{ block.settings.date }}').getTime();

              var x = setInterval(function () {
                var now = new Date().getTime();
                var distance = countDownDate - now;
                var days = Math.floor(distance / (1000 * 60 * 60 * 24));
                var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                var seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('timer-counter').innerHTML =
                  days + 'Days ' + hours + 'H ' + minutes + 'M ' + seconds + 'S ';

                if (distance < 0) {
                  clearInterval(x);
                  document.getElementById('timer-counter').innerHTML = 'EXPIRED';
                }
              }, 1000);
            </script>
        {%- endcase -%}
      {%- endfor -%}
      {%- if buttonBlocks != empty -%}
        <div class="c-rt-button-div">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'Button' -%}
                <a
                  class="c-rt-button c-button {{ block.settings.button_style }}"
                  href="{{ block.settings.button_url }}"
                >
                  {{- block.settings.button_text -}}
                </a>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

