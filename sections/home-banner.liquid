                           <p>{{ section.settings.trusted_label }}</p>
                        </div>
                        <div class="home-banner__image-bottom">
                            {% for block in section.blocks %}
                                {% if block.type == 'logos' %}
                                    <div class="home-banner__image-logos-item">
                                        {{ block.settings.logo }}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Home Banner",
        "class": "home-banner",
        "tag": "section",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "Image Mobile"
            },
            {
                "type": "text",
                "id": "headline",
                "label": "Headline"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            },
            {
                "type": "text",
                "id": "trusted_label",
                "label": "Trusted Label"
            },
            {
                "type": "text",
                "id": "trusted_top_text",
                "label": "Trusted Top Text",
                "default": "Rated 4.8 from 12,742+ Reviews"
            },
            {
                "type": "text",
                "id": "trusted_bottom_text",
                "label": "Trusted circle",
                "default": "12k+"
            }
        ],
        "blocks": [
            {
                "type": "logos",
                "name": "Logo",
                "settings": [
                    {
                        "type": "liquid",
                        "id": "logo",
                        "label": "Logo"
                    }
                ]
            },
            {
                "type": "trusted_logos",
                "name": "Trusted Logos",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    }
                ]
            }
            
        ],
        "presets": [
          {
            "name": "Home Banner"
          }
        ]
    }
{% endschema %}
