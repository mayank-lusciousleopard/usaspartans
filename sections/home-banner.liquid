{{ 'home-banner.css' | asset_url | stylesheet_tag }}
<div class="home-banner__container">
    <div class="home-banner__background">
        <picture>
            <source media="(max-width: 999px)" srcset="{{ 'home-banner-bg-mobile.png' | asset_url }}">
            <img src="{{ 'home-banner-overlay.png' | asset_url }}" alt="Home Banner Background" />
        </picture>
    </div>
    <div class="page-width">
        <div class="home-banner__wrapper">
            <div class="home-banner__content">
                <div class="home-banner__reviews">
                    <div class="home-banner__reviews-img">
                        {% for block in section.blocks %}
                            {% if block.type == 'trusted_logos' %}
                                <div class="home-banner__reviews-img-item">
                                <img src="{{ block.settings.image | image_url: width: 1000 }}" alt="{{ block.settings.image.alt }}" />
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="home-banner__reviews-circle">
                            {{ section.settings.trusted_bottom_text }}
                        </div>
                    </div>
                    <span class="home-banner__reviews-top">{{ section.settings.trusted_top_text }}</span>
                    
                </div>
                {% if section.settings.headline %}
                    <h1>{{ section.settings.headline }}</h1>
                {% endif %}
                {% if section.settings.description %}
                    <p>{{ section.settings.description }}</p>
                {% endif %}
                {% if section.settings.button_text and section.settings.button_url %}
                    <div class="home-banner__button">
                        <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
                    </div>
                {% endif %}
            </div>
            <div class="home-banner__image">
                <picture>
                    {% if section.settings.image_mobile %}
                        <source media="(max-width: 999px)" srcset="{{ section.settings.image_mobile | image_url: width: 768 }}">
                    {% endif %}
                    <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="{{ section.settings.image.alt }}" />
                </picture>
                {% if section.settings.button_text and section.settings.button_url %}
                    <div class="home-banner__button">
                        <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
                    </div>
                {% endif %}
                <div class="home-banner__image-logos">
                    <div class="home-banner__image-wrapper">
                        <div class="home-banner__image-top">
