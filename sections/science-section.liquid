  { 
    "name": "Science Section",
    "settings": [
      { 
         "type": "text",
         "id":"title",
         "label": "Science Title" 
      },
      { 
         "type": "text",
         "id":"heading",
         "label": "Science Heading" 
      },
      { 
         "type": "text",
         "id":"text",
         "label": "Science Text" 
      },

      { 
         "type": "text",
         "id":"main-title",
         "label": "Science Main Title" 
      },
      { 
         "type": "richtext",
         "id":"main-text",
         "label": "Science Main Text" 
      },
      { 
         "type": "text",
         "id":"number1",
         "label": "Science Title" 
      },
      { 
         "type": "text",
         "id":"text1",
         "label": "Science Text" 
      },
      { 
         "type": "text",
         "id":"number2",
         "label": "Science Title" 
      },
      { 
         "type": "text",
         "id":"text2",
         "label": "Science Text" 
      },
      { 
         "type": "image_picker",
         "id":"benefit-img",
         "label": "Benefits Image" 
       }
    ],
    "blocks": [ 
       { 
         "type": "Science-Benefits",
         "name": "Science Benefits Block",
         "settings": [ 
           {
              "type": "image_picker",
              "id":   "benefit-ico",
              "label": "Science Benefits Icon"
           },
           {
              "type": "text",
              "id":   "title",
              "label": "Science Benefits Title"
            } 
         ] 
       } 
     ], 
    "presets":[
      {
        "name":"Science Section" 
      } 
    ] 
  } 
{% endschema %}

