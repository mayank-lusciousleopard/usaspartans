    },
    {
      "type": "text",
      "id": "sub_text_2",
      "label": "Sub Text 2",
      "default": "Limited Stock"
    }
  ],
  "presets": [
    {
      "name": "Scrolling Text Banner",
      "category": "custom"
    }
  ]
}
