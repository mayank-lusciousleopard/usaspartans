{{ 'section-why-choose-ice-bath.css' | asset_url | stylesheet_tag }}

<style>
  #why-choose-ice-bath-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media (min-width: 990px) {
    #why-choose-ice-bath-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  {% if template.name == 'product' %}
    #why-choose-ice-bath-{{ section.id }} {
      padding-top: 32px;
      padding-bottom: 32px;
    }
    @media (min-width: 990px) {
      #why-choose-ice-bath-{{ section.id }} {
        padding-top: 72px;
        padding-bottom: 72px;
      }
    }
  {% endif %}
</style>

<section id="why-choose-ice-bath-{{ section.id }}" class="wci">
  <div class="page-width">
    <div class="wci__box">
      <div class="wci__content">
        {% if section.settings.heading != blank %}
          <h2 class="wci__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="wci__text rte">{{ section.settings.text }}</div>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <ul class="wci-benefits" role="list">
            {% for block in section.blocks %}
              <li class="wci-benefit" {{ block.shopify_attributes }}>
                <span class="wci-benefit__icon">
                  {% if block.settings.icon != blank %}
                    {{ block.settings.icon | image_url: width: 48 | image_tag: loading: 'lazy', alt: block.settings.label, class: 'wci-benefit__icon-img' }}
                  {% else %}
                    {% render 'icon-success' %}
                  {% endif %}
                </span>
                {% if block.settings.label != blank %}
                  <span class="wci-benefit__label">{{ block.settings.label }}</span>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}

        {% if section.settings.cta_label != blank %}
          <a 
            class="wci-cta" 
            href="{{ section.settings.cta_link }}"
            {% if section.settings.cta_new_tab %} target="_blank" rel="noopener noreferrer"{% endif %}
            {% if section.settings.cta_link == blank %} onclick="window.scrollTo({ top: 0, behavior: 'smooth' });"{% endif %}
          >
            <span>{{ section.settings.cta_label }}</span>
            {% render 'icon-arrow' %}
          </a>
        {% endif %}
      </div>

      {% if section.settings.image != blank %}
        <div class="wci__image">
          {{ section.settings.image | image_url: width: 1100 | image_tag: loading: 'lazy', alt: section.settings.image_alt | escape }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why choose an ice bath",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why choose an ice bath?"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Ice baths reduce inflammation, speed up recovery, and build mental toughness. A proven way to boost your health, fitness, and strength.</p>"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label",
      "default": "Discover all benefits"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "cta_new_tab",
      "label": "Open link in new tab",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text"
    },
    {
      "type": "header",
      "content": "Paddings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top desktop",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom desktop",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Accelerates recovery"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Why choose an ice bath",
      "blocks": [
        { "type": "benefit", "settings": { "label": "Accelerates recovery" } },
        { "type": "benefit", "settings": { "label": "Builds mental resilience" } },
        { "type": "benefit", "settings": { "label": "Relieves muscle pain" } },
        { "type": "benefit", "settings": { "label": "Easy to use & maintain" } }
      ]
    }
  ]
}
{% endschema %}


