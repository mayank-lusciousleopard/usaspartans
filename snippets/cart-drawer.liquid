{% comment %}
  Renders cart drawer

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

{%- assign has_accessory_product = false -%}
{%- if settings.cart_drawer_product_1 != blank -%}
  {%- assign has_accessory_product = true -%}
{%- endif -%}
{%- if settings.cart_drawer_product_2 != blank -%}
  {%- assign has_accessory_product = true -%}
{%- endif -%}
{%- if settings.cart_drawer_product_3 != blank -%}
  {%- assign has_accessory_product = true -%}
{%- endif -%}
{%- if settings.cart_drawer_product_4 != blank -%}
  {%- assign has_accessory_product = true -%}
{%- endif -%}
{%- assign has_available_accessory = false -%}
{%- assign accessory_products_check = '' -%}
{%- if settings.cart_drawer_product_1 -%}
  {%- assign accessory_products_check = accessory_products_check
    | append: settings.cart_drawer_product_1
    | append: ','
  -%}
{%- endif -%}
{%- if settings.cart_drawer_product_2 -%}
  {%- assign accessory_products_check = accessory_products_check
    | append: settings.cart_drawer_product_2
    | append: ','
  -%}
{%- endif -%}
{%- if settings.cart_drawer_product_3 -%}
  {%- assign accessory_products_check = accessory_products_check
    | append: settings.cart_drawer_product_3
    | append: ','
  -%}
{%- endif -%}
{%- if settings.cart_drawer_product_4 -%}
  {%- assign accessory_products_check = accessory_products_check
    | append: settings.cart_drawer_product_4
    | append: ','
  -%}
{%- endif -%}
{%- assign accessory_products_check = accessory_products_check | split: ',' | uniq -%}
{%- for pid in accessory_products_check -%}
  {%- assign product_check = all_products[pid] -%}
  {%- if product_check != blank -%}
    {%- assign in_cart_tmp = false -%}
    {%- for cart_item in cart.items -%}
      {%- if cart_item.product.id == product_check.id -%}
        {%- assign in_cart_tmp = true -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}
    {%- unless in_cart_tmp -%}
      {%- assign has_available_accessory = true -%}
      {%- break -%}
    {%- endunless -%}
  {%- endif -%}
{%- endfor -%}

{%- comment -%}
  Stylesheet includes moved inside #CartDrawer so they are injected on AJAX refresh
{%- endcomment -%}

